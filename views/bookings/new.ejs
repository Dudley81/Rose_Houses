<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Book Your room at <%= property.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/properties/<%= property._id %>/bookings" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[bookingFor]" placeholder="Name">
                </div>
				 <div class="form-group">
                    <input class="form-control" type="text" name="book[phoneNum]
																  ]" placeholder="Phone Number">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[roomNum]" placeholder="Room Number">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[date_inn]" placeholder="Date In">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="book[date_out]" placeholder="Date Out">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/properties">Go Back</a>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>